[Unit]
Description = Meteodata month-minmax recomputing service
After = network.target network-online.target
Wants = network-online.target
Requires =
StartLimitIntervalSec = 60
StartLimitBurst = 10

[Service]
User = meteodata
Group = meteodata
Type = notify
ExecStart = /usr/local/bin/meteodata-month-minmax-worker
Restart = on-abnormal
WatchdogSec = 60
NotifyAccess = all

[Install]
WantedBy = multi-user.target
